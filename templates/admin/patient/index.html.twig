{% extends 'base.html.twig' %}

    {% block stylesheets %}
        {{ parent() }}
        <link rel="stylesheet" href="{{ asset('css/admin/patient.css') }}">
    {% endblock %}

{% block body %}
    <div class="container">

        <h4 id="titre" class="p-4">Gestion des patients</h4>

        <div class="">
            <form method="POST">
                <div class="input-group input-group-lg col-8">
                    <input id="inputRecherche" type="text" class="form-control" placeholder="Rechercher un patient...">
                </div>

            </form>
        </div><br>



        <div class="">
            <table class="table table-striped col-sm-auto">
                <thead>
                    <th>Nom</th>
                    <th>Prénom</th>
                    <th>Âge</th>
                    <th>Téléphone</th>
                    <th></th>
                </thead>
                <tbody id="resultatRecherche">
                {% for patient in patients %}
                    <tr>
                        <td>{{ patient.nom }}</td>
                        <td>{{ patient.prenom }}</td>
                        {% if patient.age == '0 ans' %}
                            <td>Non renseigné</td>
                        {% elseif patient.age is null %}
                            <td>Non renseigné</td>
                        {% else %}
                            <td>{{ patient.age }}</td>
                        {% endif %}
                        <td>{{ patient.telephone }}</td>
                        <td>
                            <a href="{{ path('app_admin_patient_infos', {id: patient.id}) }}"
                               class="btn btn-sm btn-outline-info">
                                <i class="fas fa-file-medical-alt"></i>
                            </a>
                            <a href="{{ path('app_admin_patient_delete', {id: patient.id}) }}"
                               class="btn btn-sm btn-outline-danger">
                                <i class="fas fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

        <div class="align-items-end">
            <a id="lienRemonte"
               class="btn btn-sm btn-outline-info align-items-end">
                <i class="fas fa-chevron-up"></i>
            </a>
        </div>
    </div>


{% endblock %}

    {% block javascripts %}
        {{ parent() }}
        <script src="{{ asset('bundles/fosjsrouting/js/router.min.js') }}"></script>
        <script src="{{ path('fos_js_routing_js', { callback: 'fos.Router.setData' }) }}"></script>


        <script src="{{ asset('js/admin/patient.js') }}"></script>
    {% endblock %}