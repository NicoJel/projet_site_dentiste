{% extends 'base.html.twig' %}

    {% block stylesheets %}
        {{ parent() }}
    {% endblock %}

{% block body %}
    <div class="container">

        <h4 class="p-4">Gestion des patients</h4>

        <div class="">
            <form id="recherche">
                <div class="input-group input-group-lg col-8">
                    <input type="text" class="form-control" placeholder="Rechercher un patient...">
                    <div class="input-group-append">
                        <button class="btn btn-info" type="submit" id="button-addon2">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </div>
            </form>
        </div><br>

        <div id="resultat"></div><br>

        <div class="">
            <table class="table table-striped col-sm-auto">
                <thead>
                    <th>Nom</th>
                    <th>Prénom</th>
                    <th>Âge</th>
                    <th>Téléphone</th>
                    <th></th>
                </thead>
                <tbody>
                {% for patient in patients %}
                    <tr>
                        <td>{{ patient.nom }}</td>
                        <td>{{ patient.prenom }}</td>
                        <td>{{ patient.age }}</td>
                        <td>{{ patient.telephone }}</td>
                        <td>
                            <a href="{{ path('app_admin_patient_infos', {id: patient.id}) }}"
                               class="btn btn-sm btn-outline-info">
                                <i class="fas fa-file-medical-alt"></i>
                            </a>
                            <a href="{{ path('app_admin_patient_delete', {id: patient.id}) }}"
                               class="btn btn-sm btn-outline-danger">
                                <i class="fas fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

        <div class="form-btn-group text-right">
            <a href="#"
               class="btn btn-sm btn-outline-info align-items-end">
                <i class="fas fa-chevron-up"></i>
            </a>
        </div>
    </div>

    {% block javascripts %}
        {{ parent() }}
        <script src="{{ asset('js/recherche.js') }}"></script>
    {% endblock %}

{% endblock %}