<!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ 4 PHOTOS DU CABINET ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

    <!-- la grille : 4 colonnes -->
    <div class="container-fluid">
        <div class="row">
            <div class="column">
                <img src="{{ asset('img/cabinet/1.jpg') }}" style="width:100%" alt="Cabinet">
                <div class="overlay1">Le cabinet</div>
            </div>
            <div class="column">
                <img src="{{ asset('img/cabinet/2.jpg') }}" style="width:100%" alt="Secrétariat">
                <div class="overlay2">Le secrétariat</div>
            </div>
            <div class="column">
                <img src="{{ asset('img/cabinet/3.jpg') }}" style="width:100%" alt="Salle d'attente">
                <div class="overlay3">La salle d'attente</div>
            </div>
            <div class="column">
                <img src="{{ asset('img/cabinet/4.jpg') }}" style="width:100%" alt="Matériel dentaire">
                <div class="overlay4">Le matériel dentaire</div>
            </div>
        </div>
    </div>

<!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ L'ANCRE VERS LE HAUT DE PAGE ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

    <button onclick="topFunction()" id="boutonHaut" title="haut de page"><img src="../../logos/cabinet/flecheHaut.png" alt="logo-fleche"></button>

<!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ ENDBLOCK ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

{% endblock %}
{% block javascripts %}
    {{ parent() }}

    <script>
        // Lorsque l'utilisateur défile la page, exécute myFunction
        window.onscroll = function() {
            myFunction();
            scrollFunction();
        };

        function myFunction() {

            var winScroll = document.body.scrollTop || document.documentElement.scrollTop;
            var height = document.documentElement.scrollHeight - document.documentElement.clientHeight;
            var scrolled = (winScroll / height) * 100;
            document.getElementById("myBar").style.width = scrolled + "%";
        }

        // Lorsque l'utilisateur fait défiler au moins 20px à partir du haut de page, l'ancre s'affiche
        //window.onscroll = function() {};

        function scrollFunction() {
            if (document.body.scrollTop > 20 || document.documentElement.scrollTop > 20) {
                document.getElementById("boutonHaut").style.opacity = "1";
            } else {
                document.getElementById("boutonHaut").style.opacity = "0";
            }
        }

        // Lorsque l'utilisateur clique sur le bouton, on accède en haut de la page
        //var button=document.getElementById('boutonHaut')

        function topFunction() {
            //document.querySelector('#barreNavigation').scrollIntoView();
            $('html, body').animate({
                scrollTop: 0
            });
        }
    </script>

{% endblock %}
