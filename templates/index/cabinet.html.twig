{% extends 'base.html.twig' %}

    {% block body %}

    <h1>Mon cabinet</h1>

    <h3>Adresse du cabinet :</h3>

        <p>120 rue machinbidule, Nouméa</p>

    <h2> Situez mon cabinet dentaire</h2>

        <script type="text/javascript">
            function carteVisibilite(id) {
                var e = document.getElementById(id);
                if(e.style.display == 'block')
                    e.style.display = 'none';
                else
                    e.style.display = 'block';
            }
        </script>
        <a href="#" onclick="carteVisibilite('carte');">Cliquez ici pour accéder à la carte</a>
        <div id="carte" style="display:none">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d14767.549024631055!2d166.45079140573554!3d-22.282260236749696!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0xd748d1bab8fe7afe!2sDentiste+Noumea+-+Cabinet+Dentaire+du+Docteur+Philippe+SANCHIS!5e0!3m2!1sfr!2sfr!4v1534507887044" width="600" height="450" frameborder="0" style="border:0" allowfullscreen></iframe>
        </div>

    <h3>Photo de mon cabinet</h3>

        <div>

            <div class="container">

                <!-- Full-width images with number text -->
                <div class="mySlides">
                    <div class="numbertext">1 / 4</div>
                    <img src="{{ asset('images/1.jpg') }}" style="width:100%">
                </div>

                <div class="mySlides">
                    <div class="numbertext">2 / 4</div>
                    <img src="{{ asset('images/2.jpg') }}" style="width:100%">
                </div>

                <div class="mySlides">
                    <div class="numbertext">3 / 4</div>
                    <img src="{{ asset('images/3.jpg') }}" style="width:100%">
                </div>

                <div class="mySlides">
                    <div class="numbertext">4 / 4</div>
                    <img src="{{ asset('images/4.jpg') }}" style="width:100%">
                </div>

                <!-- Next and previous buttons -->
                <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
                <a class="next" onclick="plusSlides(1)">&#10095;</a>

                <!-- Image text -->
                <div class="caption-container">
                    <p id="caption"></p>
                </div>

                <!-- Thumbnail images -->
                <div class="row" >
                    <div class="column">
                        <img class="demo cursor" src="{{ asset('images/1.jpg') }}" style="width:100%" onclick="currentSlide(1)" alt="cabinet1">
                    </div>
                    <div class="column">
                        <img class="demo cursor" src="{{ asset('images/2.jpg') }}" style="width:100%" onclick="currentSlide(2)" alt="cabinet2">
                    </div>
                    <div class="column">
                        <img class="demo cursor" src="{{ asset('images/3.jpg') }}" style="width:100%" onclick="currentSlide(3)" alt="cabinet3">
                    </div>
                    <div class="column">
                        <img class="demo cursor" src="{{ asset('images/4.jpg') }}" style="width:100%" onclick="currentSlide(4)" alt="cabinet4">
                    </div>
                </div>
            </div>

        </div>

{% endblock %}


{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/slider.js') }}"></script>
    {% endblock %}
    {% block stylesheets %}
    {{  parent () }}
    <link href="{{ asset('css/slider.css') }}">
{% endblock %}
