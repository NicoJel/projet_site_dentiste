            <link rel="stylesheet" href="{{ asset('css/style.css') }}">
        {% endblock %}
    </head>
    <body>

    {% if is_granted('ROLE_ADMIN') %}
    <nav class="navbar navbar-expand-md navbar-dark navbar-admin">
        <div class="container navbar-nav">
