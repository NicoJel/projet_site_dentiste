    <body>

    {% if is_granted('ROLE_ADMIN') %}
    <nav class="navbar navbar-expand-md navbar-dark bg-secondary" id="navbarAdmin">
        <div class="container navbar-nav">
            <a href="#" class="navbar-brand">
